@{
    Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "ReceiptNo";
        settings.Properties.ValueField = "ReceiptNumber";
        settings.Properties.TextField = "ReceiptNumber";
        settings.Width = Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "productions", Action = "cboDeliveryReceiptPartial", PermitteeId = ViewBag.PermitteeId };
        settings.Properties.ClientSideEvents.KeyDown = "function(s,e){cboDeliveryReceipt(s,e)}";
    }).BindToEF("",nameof(DeliveryReceipts), (s, e) =>
    {
        e.QueryableSource = Model;
        e.KeyExpression = "Id";
        e.DefaultSorting = "Id asc";
    }).Bind(ViewBag.ReceiptNo).GetHtml();
}

