@using (Ajax.BeginForm("DeleteMultipleDeleteDeliveryReceiptsPartial", "DeliveryReceipts", new { }, new AjaxOptions()
{
    InsertionMode = InsertionMode.ReplaceWith,
    Confirm = "Are you sure do you want to delete this DR's",
    UpdateTargetId = "form-multiple-delete",
    HttpMethod = "POST"

}, new { @id = "form-multiple-delete" }))
{
    <div class="row">
        <div class="col-lg-12">
            @{
                Html.RenderAction("MultipleDeleteDeliveryReceiptsPartial");
            }
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-lg-12">
            @{
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnSubmit";
                    settings.Text = "Submit";
                    settings.UseSubmitBehavior = true;
                }).GetHtml();
            }
        </div>
    </div>
}
